<?xml version="1.0" encoding="utf-8"?>
<config>

	<fieldset name="useroptions" label="COM_CONFIG_USEROPTIONS_FIELDSET_LABEL" description="COM_USERSCHED_CONFIG_CALOPTS_DESC">
		<field
			name="user_canskin"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_CANSKIN_LABEL"
			description="COM_USERSCHED_CONFIG_CANSKIN_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="user_canalert"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_CANALERT_LABEL"
			description="COM_USERSCHED_CONFIG_CANALERT_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="user_recurrevt"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_RECURR_LABEL"
			description="COM_USERSCHED_CONFIG_RECURR_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

	<fieldset name="grpoptions" label="COM_CONFIG_GRPOPTIONS_FIELDSET_LABEL" description="COM_USERSCHED_CONFIG_CALOPTS_DESC">
		<field
			name="grp_canskin"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_CANSKIN_LABEL"
			description="COM_USERSCHED_CONFIG_CANSKIN_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="grp_canalert"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_CANALERT_LABEL"
			description="COM_USERSCHED_CONFIG_CANALERT_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="grp_recurrevt"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_RECURR_LABEL"
			description="COM_USERSCHED_CONFIG_RECURR_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

	<fieldset name="component" label="COM_CONFIG_COMPOPTIONS_FIELDSET_LABEL">
		<field
			name="dhtmlx_version"
			type="radio"
			class="btn-group"
			default="6.0"
			label="COM_USERSCHED_CONFIG_DHTMLX_VERSION_LABEL"
			description="COM_USERSCHED_CONFIG_DHTMLX_VERSION_DESC"
		>
			<option value="6.0">6.0.x</option>
			<option value="7.0">7.0.x</option>
			<option value="7.1">7.1.x</option>
			<option value="7.2">7.2.x</option>
		</field>
		<field name="standard_skin"
			type="folderlist"
			directory="components/com_usersched/skins"
			hide_none="1"
			default=""
			label="Standard skin:"
			description="The standard skin (as default)" />
		<field
			name="default_skin"
			type="folderlist"
			directory="components/com_usersched/skins"
			hide_none="1"
			label="COM_USERSCHED_USKIN_DEFAULT_LABEL"
			description="COM_USERSCHED_SKIN_DEFAULT_DESC" />
		<field
			name="group_default_skin"
			type="folderlist"
			directory="components/com_usersched/skins"
			hide_none="1"
			label="COM_USERSCHED_GSKIN_DEFAULT_LABEL"
			description="COM_USERSCHED_SKIN_DEFAULT_DESC" />
		<field
			name="site_default_skin"
			type="folderlist"
			directory="components/com_usersched/skins"
			hide_none="1"
			label="COM_USERSCHED_SSKIN_DEFAULT_LABEL"
			description="COM_USERSCHED_SKIN_DEFAULT_DESC" />
		<field
			name="show_versions"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_USERSCHED_CONFIG_VERSIONS_LABEL"
			description="COM_USERSCHED_CONFIG_VERSIONS_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="alert_replyto"
			type="text"
			label="COM_USERSCHED_ALERT_REPLYTO_LABEL"
			description="COM_USERSCHED_ALERT_REPLYTO_DESC" />
		<field
			name="googapi_key"
			type="text"
			label="COM_USERSCHED_CONFIG_GOOGAPI_LABEL"
			description="COM_USERSCHED_CONFIG_GOOGAPI_DESC" />
		<field name="version" type="hidden" default="x.x.x" />
	</fieldset>

	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_usersched"
			section="component" />
	</fieldset>

</config>
